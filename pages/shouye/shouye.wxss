/* 页面整体容器 */
.container {
  padding: 16rpx;
  background-color: #f8f8f8;
}

/* 顶部标题 */
.header {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 10rpx;
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  width: 98%;
}

.search-bar input {
  flex: 1;
  padding: 10rpx;
  border: none;
  outline: none;
  font-size: 28rpx;
}

.search-bar .icon {
  width: 50rpx;
  height: 50rpx;
}

/* 顶部图片展示 */
.top-image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

/* 功能按钮 */
.function-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  width: 99%;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 20rpx;
  width: 160rpx;
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.function-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.function-item text {
  font-size: 28rpx;
}

/* 通用部分 - section */
.section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 95%;
}

/* section 头部，包含标题和更多按钮 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header text {
  font-size: 32rpx;
  font-weight: bold;
}

.section-header .more {
  font-size: 28rpx;
  color: #888888;
}

/* 热门项目列表 */
.project-list {
  display: flex;
  flex-direction: column;
}

.project-item {
  display: flex;
  margin-bottom: 20rpx;
}

.project-item:last-child {
  margin-bottom: 0;
}

.project-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.project-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.project-title {
  font-size: 30rpx;
  font-weight: bold;
}

.project-tag {
  font-size: 24rpx;
  color: #1aad19;
}

.project-description {
  font-size: 24rpx;
  color: #888888;
}
.project-status{
  font-size: 14px;
  font-weight: bold;
  margin-top: 6px;
 
}

/* 底部导航栏 */
.bottom-navbar {
  display: flex;
  justify-content: space-between;
  background-color: #ffffff;
  padding: 10rpx;
  box-shadow: 0rpx -2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.navbar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.navbar-item image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}

.navbar-item text {
  font-size: 24rpx;
}
