.container {
  padding: 15px;
}

.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 20px;
  background-color: #f8f8f8;
  margin-bottom: 15px;
  
}

input {
  flex-grow: 1;
  padding: 5px;
  border: none;
  background-color: transparent;
}

.search-icon {
  width: 20px;
  height: 20px;
}
.tab-bar {
  display: flex;
  justify-content: space-around;
  background-color: #f0f0f0;
  border-bottom: 1px solid #ddd;
  margin-bottom: 20px;
}

.tab {
  padding: 10px 20px;
  color: #888;
  font-size: 16px;
}

.active {
  color: #4c8bf5;
  border-bottom: 2px solid #4c8bf5;
}


.project-list {
  display: flex;
  flex-direction: column;
}

.project-card {
  display: flex;
  padding: 15px;
  background-color: white;
  margin-bottom: 10px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.project-image {
  width: 80px;
  height: 80px;
  border-radius: 5px;
  margin-right: 15px;
}

.project-info {
  flex: 1;
}

.project-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.project-type {
  color: #0088ff;
  margin-bottom: 5px;
}

.project-description {
  color: #666;
  margin-bottom: 10px;
}

.project-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.progress-circle {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ddd;
}

.progress {
  color: white;
  font-size: 14px;
}
