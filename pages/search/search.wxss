/* Container */
.container {
  padding: 20rpx;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  flex-direction: row;
  border: 1px solid #ddd;
  border-radius: 20rpx;
  padding: 10rpx;
  align-items: center;
  width: 98%;
}

.search-input {
  flex: 1;
  border: none;
  outline: none;
  padding-left: 10rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
}

/* Section 样式 */
.section {
  margin-top: 40rpx;
}

.section-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.more {
  color: #999;
}
