/* pages/all_projects/all_projects.wxss */
.container {
  padding: 16px;
  background-color: #f5f5f5;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 10rpx;
  box-shadow: 0rpx 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  width: 98%;
}

.search-bar input {
  flex: 1;
  padding: 10rpx;
  border: none;
  outline: none;
  font-size: 28rpx;
}

.search-bar .icon {
  width: 50rpx;
  height: 50rpx;
}

.icon {
  width: 24px;
  height: 24px;
  margin-left: 8px;
}

.filter-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.filter-button {
  flex-grow: 1;
  text-align: center;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 20px;
  margin-right: 10px;
  background-color: #fff;
  
}

.filter-button.active {
  background-color: #1c92ff;
  color: white;
}

.project-list {
  display: flex;
  flex-direction: column;
  width: 99%;
}

.project-item {
  display: flex;
  padding: 12px;
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 12px;
}

.project-image {
  width: 80px;
  height: 80px;
  margin-right: 12px;
  border-radius: 8px;
}

.project-info {
  flex-grow: 1;
}

.project-title {
  font-size: 30rpx;
  font-weight: bold;
}

.project-tag {
  font-size: 24rpx;
  color: #1aad19;
  white-space: nowrap;        
  display: inline-block;      
  width: 100%;  
  overflow: hidden;         
  text-overflow: ellipsis;   
  display: inline-block;  
}

.project-description {
  font-size: 24rpx;
  color: #888888;
  white-space: nowrap;        
  overflow: hidden;         
  text-overflow: ellipsis;   
  display: inline-block;      
  width: 100%;  
}
.project-status {
  font-size: 14px;
  font-weight: bold;
  margin-top: 6px;
}

.recruiting {
  color: #3cc51f;
}

.ongoing {
  color: #1c92ff;
}

.completed {
  color: #999;
}
