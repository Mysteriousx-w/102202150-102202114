/* pages/project_detail/project_detail.wxss */
/* General container */
.container {
  padding: 16px;
  background-color: #f8f8f8;
}

/* Project image */
.project-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

/* Project title */
.project-info {
  margin: 16px 0;
}

.project-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
}

.recruiting-status {
  color: #35b37d;
  font-size: 16px;
  margin-top: 8px;
}

.creator-info, .team-size {
  font-size: 14px;
  color: #999;
  margin-top: 4px;
}

/* Section titles */
.section {
  margin-top: 24px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.section-content {
  font-size: 14px;
  color: #666;
}

/* Recruitment conditions */
.condition-item {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  margin-bottom: 4px;
}

/* 表格样式 */
.table {
  display: table;
  width: 100%;
  border-collapse: collapse;
}

.table-row {
  display: table-row;
}

.table-cell {
  display: table-cell;
  padding: 8px;
  border: 1px solid #e0e0e0;
  text-align: center;  /* 让内容居中 */
  font-size: 14px;
}

/* 表头样式 */
.table-header {
  background-color: #f5f5f5;
  font-weight: bold;
  color: #333;
}

/* Join button */
.join-btn {
  background-color: #35b37d;
  color: white;
  border-radius: 8rpx;
  padding: 12px 0;
  text-align: center;
  font-size: 16px;
  margin-top: 24px;
}